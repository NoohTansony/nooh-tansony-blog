---
interface Props {
	date: Date;
	includeTime?: boolean;
}

const { date, includeTime = false } = Astro.props;
---

<time datetime={date.toISOString()}>
	{
		includeTime
			? date.toLocaleString('ko-KR', {
				year: 'numeric',
				month: 'short',
				day: 'numeric',
				hour: '2-digit',
				minute: '2-digit',
			})
			: date.toLocaleDateString('ko-KR', {
				year: 'numeric',
				month: 'short',
				day: 'numeric',
			})
	}
</time>
